[user]
	name = Stuart Ingram

[alias]
        a = add
	br = branch
        changes = diff --name-status -r
	ci = commit
	co = checkout
	dump = cat-file -p
        d = diff
        ds = diff --staged
        h = help
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
        irb = rebase --interactive
        l = log --oneline --decorate
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
        ls-ignored = ls-files --exclude-standard --ignored --others
        m = merge
        rb = rebase
        rba = rebase --abort
        rbc = rebase --continue
        rbs = rebase --skip
        rh = reset --hard
        s = status
        sl = shortlog
        st = stash
#	st = status
        stc = stash clear
        stl = stash list
        stp = stash pop
	type = cat-file -t
        undo = reset --soft HEAD^
        wd = diff --color-words
        wds = diff --color-words --staged

[color]
	status = auto
	branch = auto
	diff = auto
        ui = auto

[color "diff"]
	# new = cyan
	# old = magenta
	# frag = yellow
	# meta = green
	# commit = normal
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "status"]
        added = yellow
        changed = green
        untracked = cyan

[core]
        excludesfile = ~/.gitignore
        whitespace = trailing-space,space-before-tab
        quotepath = false

